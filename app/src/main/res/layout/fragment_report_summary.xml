<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/report_summary_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/report_summary"
        android:textAlignment="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/report_summary_cost_overall_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_summary_cost_overall" />

            <TextView
                android:id="@+id/report_summary_cost_overall_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_summary_cost_overall_label"
                android:layout_alignParentRight="true"
                android:gravity="right"
                tools:text="5450 zł" />

            <TextView
                android:id="@+id/report_summary_cost_per_month_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_summary_cost_overall_field"
                android:text="@string/report_summary_cost_per_month" />

            <TextView
                android:id="@+id/report_summary_cost_per_month_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_summary_cost_per_month_label"
                android:layout_alignParentRight="true"
                android:gravity="right"
                tools:text="540 zł" />

            <TextView
                android:id="@+id/report_summary_fuel_average_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_summary_cost_per_month_field"
                android:text="@string/report_fuel_average" />

            <TextView
                android:id="@+id/report_summary_fuel_average_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_summary_fuel_average_label"
                android:layout_alignParentRight="true"
                android:gravity="right"
                tools:text="33l/100km" />

            <TextView
                android:id="@+id/report_summary_fuel_overall_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_summary_fuel_average_field"
                android:text="@string/report_fuel_overall" />

            <TextView
                android:id="@+id/report_summary_fuel_overall_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_summary_fuel_overall_label"
                android:layout_alignParentRight="true"
                android:gravity="right"
                tools:text="330 l" />

            <TextView
                android:id="@+id/report_summary_fuel_cost_overall_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_summary_fuel_overall_field"
                android:text="@string/report_fuel_cost_overall" />

            <TextView
                android:id="@+id/report_summary_fuel_cost_overall_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_summary_fuel_cost_overall_label"
                android:layout_alignParentRight="true"
                android:gravity="right"
                tools:text="630 zł" />

            <TextView
                android:id="@+id/report_summary_services_cost_overall_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_summary_fuel_cost_overall_field"
                android:text="@string/report_services_cost_overall" />

            <TextView
                android:id="@+id/report_summary_services_cost_overall_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_summary_services_cost_overall_label"
                android:layout_alignParentRight="true"
                android:gravity="right"
                tools:text="3000 zł" />

            <TextView
                android:id="@+id/report_summary_mileage_overall_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_summary_services_cost_overall_field"
                android:text="@string/report_summary_mileage_overall" />

            <TextView
                android:id="@+id/report_summary_mileage_overall_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_summary_mileage_overall_label"
                android:layout_alignParentRight="true"
                android:gravity="right"
                tools:text="4567 km" />

            <TextView
                android:id="@+id/report_summary_mileage_per_month_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_summary_mileage_overall_field"
                android:text="@string/report_summary_mileage_per_month" />

            <TextView
                android:id="@+id/report_summary_mileage_per_month_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_summary_mileage_per_month_label"
                android:layout_alignParentRight="true"
                android:gravity="right"
                tools:text="600 km" />

            <TextView
                android:id="@+id/report_summary_to_mot_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_summary_mileage_per_month_field"
                android:text="@string/report_summary_to_mot" />

            <TextView
                android:id="@+id/report_summary_to_mot_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_summary_to_mot_label"
                android:layout_alignParentRight="true"
                android:gravity="right"
                tools:text="54 dni" />

            <TextView
                android:id="@+id/report_summary_to_insurance_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_summary_to_mot_field"
                android:text="@string/report_summary_to_insurance" />

            <TextView
                android:id="@+id/report_summary_to_insurance_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/report_summary_to_insurance_label"
                android:layout_alignParentRight="true"
                android:gravity="right"
                tools:text="54 dni" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>