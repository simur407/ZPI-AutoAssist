<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin">


            <LinearLayout
                android:id="@+id/report_services_count_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/report_services_count_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_services_count"
                    android:textColor="@color/secondary_text"/>

                <TextView
                    android:id="@+id/report_services_count_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="24sp"
                    tools:text="5"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/report_services_cost_overall_group"
                android:layout_below="@+id/report_services_count_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/report_services_cost_overall_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_services_cost_overall"
                    android:textColor="@color/secondary_text"/>

                <TextView
                    android:id="@+id/report_services_cost_overall_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="24sp"
                    tools:text="3000 zł"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/report_services_cost_average_group"
                android:layout_below="@+id/report_services_cost_overall_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/report_services_cost_average_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_services_cost_average"
                    android:textColor="@color/secondary_text"/>

                <TextView
                    android:id="@+id/report_services_cost_average_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="24sp"
                    tools:text="600 zł"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/report_services_cost_per_month_group"
                android:layout_below="@+id/report_services_cost_average_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/report_services_cost_per_month_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_services_cost_per_month"
                    android:textColor="@color/secondary_text"/>

                <TextView
                    android:id="@+id/report_services_cost_per_month_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="24sp"
                    tools:text="333 zł"/>
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</LinearLayout>