<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:id="@+id/report_fuel_average_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/report_fuel_average_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_fuel_average"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/report_fuel_average_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="24sp"
                    tools:text="33l/100km" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/report_fuel_per_day_group"
                android:layout_below="@+id/report_fuel_average_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/report_fuel_per_day_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_fuel_per_day"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/report_fuel_per_day_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="24sp"
                    tools:text="8 1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/report_fuel_per_month_group"
                android:layout_below="@+id/report_fuel_per_day_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/report_fuel_per_month_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_fuel_per_month"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/report_fuel_per_month_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="24sp"
                    tools:text="160 1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/report_fuel_overall_group"
                android:layout_below="@+id/report_fuel_per_month_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/report_fuel_overall_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_fuel_overall"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/report_fuel_overall_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="24sp"
                    tools:text="3301" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/report_fuel_cost_per_day_group"
                android:layout_below="@+id/report_fuel_overall_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/report_fuel_cost_per_day_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_fuel_cost_per_day"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/report_fuel_cost_per_day_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="24sp"
                    tools:text="32 zł" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/report_fuel_cost_per_month_group"
                android:layout_below="@+id/report_fuel_cost_per_day_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/report_fuel_cost_per_month_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_fuel_cost_per_month"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/report_fuel_cost_per_month_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="24sp"
                    tools:text="400 zł" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/report_fuel_cost_overall_group"
                android:layout_below="@+id/report_fuel_cost_per_month_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/report_fuel_cost_overall_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_fuel_cost_overall"
                    android:textColor="@color/secondary_text" />

                <TextView
                    android:id="@+id/report_fuel_cost_overall_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="24sp"
                    tools:text="630 zł" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>